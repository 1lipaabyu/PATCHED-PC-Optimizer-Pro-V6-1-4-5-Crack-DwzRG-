{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "description": "__MSG_ExtensionDescription__",
  "version": "0.12.1",
  "author": "Danny Lin",
  "default_locale": "en",

  "minimum_chrome_version": "49",

  "homepage_url": "https://github.com/danny0838/webscrapbook",

  "incognito": "split",

  "icons": {
    "128": "core/scrapbook_128.png"
  },

  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "file://*"
  ],

  "background": {
    "persistent": true,
    "scripts": [
      "core/common.js",
      "lib/jsSHA.js",
      "lib/mime.js",
      "lib/jszip.js",
      "core/background.js",
      "core/optionsAuto.js",
      "capturer/common.js",
      "capturer/background.js",
      "viewer/background.js"
    ]
  },

  "web_accessible_resources": [
    "lib/mime.js",
    "lib/jszip.js",
    "core/common.js",
    "core/scrapbook_128.png",
    "viewer/*"
  ],

  "options_ui": {
    "chrome_style": true,
    "page": "core/options.html"
  },

  "browser_action": {
    "default_icon": {
      "128": "core/scrapbook_128.png"
    },
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "core/browserAction.html"
  }
}
