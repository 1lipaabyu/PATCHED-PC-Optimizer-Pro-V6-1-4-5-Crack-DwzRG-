{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "description": "__MSG_ExtensionDescription__",
  "version": "0.19.2",
  "author": "Danny Lin",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "webscrapbook@danny0838.addons.mozilla.org",
      "strict_min_version": "48.0"
    }
  },

  "homepage_url": "https://github.com/danny0838/webscrapbook",

  "icons": {
    "32": "core/scrapbook_32.png",
    "128": "core/scrapbook_128.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' blob:; object-src 'self' blob:",

  "permissions": [
    "contextMenus",
    "downloads",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": [
      "lib/sha_dev.js",
      "lib/mime.js",
      "lib/jszip.js",
      "core/polyfill.js",
      "core/common.js",
      "core/optionsAuto.js",
      "core/background.js",
      "capturer/common.js",
      "capturer/background.js",
      "viewer/background.js"
    ]
  },

  "web_accessible_resources": [
    "core/polyfill.js",
    "core/common.js",
    "core/scrapbook_32.png",
    "core/scrapbook_128.png",
    "viewer/load.html",
    "viewer/view.html"
  ],

  "options_ui": {
    "browser_style": true,
    "open_in_tab": true,
    "page": "core/options.html"
  },

  "browser_action": {
    "default_icon": {
      "32": "core/scrapbook_32.png",
      "128": "core/scrapbook_128.png"
    },
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "core/browserAction.html"
  },

  "page_action": {
    "default_icon": {
      "32": "core/scrapbook_32.png",
      "128": "core/scrapbook_128.png"
    },
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "core/browserAction.html"
  }
}
