{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "description": "__MSG_ExtensionDescription__",
  "version": "0.12.1",
  "author": "Danny Lin",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "webscrapbook.beta@danny0838.addons.mozilla.org",
      "strict_min_version": "48.0",
      "update_url": "https://danny0838.github.io/webscrapbook/files/firefox/updates.json"
    }
  },

  "homepage_url": "https://github.com/danny0838/webscrapbook",

  "icons": {
    "128": "core/scrapbook_128.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' blob:; object-src 'self' blob:",

  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "core/common.js",
      "lib/jsSHA.js",
      "lib/mime.js",
      "lib/jszip.js",
      "core/background.js",
      "core/optionsAuto.js",
      "capturer/common.js",
      "capturer/background.js",
      "viewer/background.js"
    ]
  },

  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "core/common.js",
        "capturer/common.js",
        "capturer/content.js"
      ],
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    "lib/mime.js",
    "lib/jszip.js",
    "core/common.js",
    "core/scrapbook_128.png",
    "viewer/*"
  ],

  "options_ui": {
    "browser_style": true,
    "page": "core/options.html"
  },

  "browser_action": {
    "default_icon": {
      "128": "core/scrapbook_128.png"
    },
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "core/browserAction.html"
  },

  "page_action": {
    "default_icon": {
      "128": "core/scrapbook_128.png"
    },
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "core/browserAction.html"
  }
}
